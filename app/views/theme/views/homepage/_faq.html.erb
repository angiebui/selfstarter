<div id="faq">
  <div class="container clearfix">
    <div class="center">
      <h3>Frequently Asked Questions</h3>
    </div>
    <ul>
        <% for i in 0...(@faqs.count/2.0).ceil %>
        <li class=''>
          <details class=''>
            <summary class=''><%= @faqs[i].question %></summary>
            <p><%= raw(@faqs[i].answer.gsub("\n", '<br/>')) %></p>
          </details>
        </li>
      <% end %>
    </ul>
 
    <ul class="col2">
        <% for i in (@faqs.count/2.0).ceil...@faqs.count %>
        <li class=''>
          <details class=''>
            <summary class=''><%= @faqs[i].question %></summary>
            <p><%= raw(@faqs[i].answer.gsub("\n", '<br/>')) %></p>
          </details>
        </li>
      <% end %>
    </ul>    
    
  </div>
</div>
