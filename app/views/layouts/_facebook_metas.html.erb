<meta property='og:title' content="<%= @settings.facebook_title.blank? ? @settings.site_name : @settings.facebook_title %>" />

<meta property='og:site_name' content="<%= @settings.facebook_title.blank? ? @settings.site_name : @settings.facebook_title %>" />

<meta property='og:url' content='<%= root_url %>' />

<% if !@settings.facebook_description.blank? %> 
  <meta property='og:description' content="<%= @settings.facebook_description %>" />
<% end %>

<% if @settings.facebook_image.file? %> 
  <meta property='og:image' content='<%= @settings.facebook_image.url %>' />
<% end %>

<% if !@settings.facebook_app_id.blank? %> 
  <meta property='fb:app_id' content="<%= @settings.facebook_app_id %>" />
<% end %>

<meta property='og:type' content="website" />