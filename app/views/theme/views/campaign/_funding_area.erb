<div id="funding_area">
  <div class="container clearfix">

    <div class="center">
      <h2><%= @campaign.name %></h2>
    </div>
    
    <div class="clearfix">
    <% if @campaign.media_type == 'video' %>
    
      <div id="video">
        <% if @campaign.video_placeholder.file? %>
          <div id="video_image">
            <%= image_tag @campaign.video_placeholder.url(:main), alt: "video_place_holder" %>
          </div>
          <% if !@campaign.video_embed_url.blank? %>
            <div id="player" class="hidden" style="display: none;">
              <object width="512" height="385">
                <param name="movie" value="https://www.youtube.com/v/<%= @campaign.video_embed_url %>?autohide=1&showinfo=0&rel=0&autoplay=1" />
                <param name="allowFullScreen" value="true" />
                <param name="allowscriptaccess" value="always" />
                <embed src="https://www.youtube.com/v/<%= @campaign.video_embed_id %>?autohide=1&showinfo=0&rel=0&autoplay=1" type="application/x-shockwave-flash" width="512" height="385" allowscriptaccess="always" allowfullscreen="true"></embed>
              </object>
            </div>
          <% end %>
        <% else %>
          <% if !@campaign.video_embed_id.blank? %>
            <iframe width='512' height='385' src="https://www.youtube.com/embed/<%= @campaign.video_embed_id %>?rel=0"></iframe>
          <% end %>
        <% end %>
      </div>
    
    <% else %>

      <div id="image">
        <%= image_tag @campaign.project_image.url(:main), alt: "project_image" %>
      </div>
    
    <% end %>
  
    <div id="backing">
      <ul>
        <li class="stats" id="backers">
          <%= number_with_delimiter @ct_campaign.stats["number_of_contributions"].to_i, :delimiter => "," %>
          <span><%= @campaign.contributor_reference.pluralize(@ct_campaign.stats["number_of_contributions"].to_i) %></span>
        </li>
        <li class="stats">
          <%= number_to_currency @ct_campaign.stats["raised_amount"].to_f/100, :precision => 0 %>
          <span>of <%= number_to_currency @campaign.goal.to_f, :precision => 0 %></span>
        </li>
  
        <% if @ct_campaign.is_expired == 0 %>
          <li class="stats" id="days">
            <%= distance_of_time_in_words_to_now(@campaign.expiration_date).gsub(/\D/, "") %>
            <span><%= distance_of_time_in_words_to_now(@campaign.expiration_date).gsub(/\d/, "").gsub("about", "") %> left</span>
          </li>
        <% else %>
          <li class="stats" id="days">
              No
              <span>days left!!</span>
            </li>
        <% end %>
      </ul>
      <% if @ct_campaign.stats["raised_amount"].to_f/100 < @campaign.goal.to_f %>
        <div id='progress_bg' class='small'>
          <div id='progress' class='' style='width: <%= @ct_campaign.stats["tilt_percent"].to_i %>%;'>
          </div>
        </div>
      <% else %>
        <div id="progress_bg">
          <div id="progress">
          </div>
          <div id='progress_text'><%= @ct_campaign.stats["tilt_percent"] %>% <%= @campaign.progress_text %></div>
        </div>
      <% end %>
      
      <div id="reserve_container">
        <div class="call_to_action_button">
          <a href="<%= url_for checkout_amount_path %>" class="blue_button reserve"><%= @campaign.primary_call_to_action_button %></a>
        </div>
        <div class="call_to_action_description">
          <%= raw(@campaign.primary_call_to_action_description) %>
        </div>
      </div>  
    </div>
  </div>
  
  <div class="share">
    <%= render 'shared/share_buttons' %>
  </div>
  
  </div>
</div>