<div id="checkout">
  <div class="container content_box clearfix">
    <div class="main_content">
      <h3><%= @campaign.name %></h3>
        
        <% if user_signed_in? %>
        <table class="table">
          <thead>
            <tr>
              <th>Payment Amount</th>
              <% if @campaign.payment_type == 'fixed' %>
                <th>Quantity</th>
              <% end %>   
              <% if @fee > 0 %>
                <th>Processing Fee</th>
              <% end %>
              <th>Total</th>
            </tr>
          </thead>
        <tbody>
          <tr>
            <td id="table_amount">
              $<%= number_with_precision(@amount, precision: 2) %>
              <%= link_to "edit", checkout_amount_path(@campaign) if @campaign.payment_type != 'fixed' %>
            </td>

            <% if @campaign.payment_type == 'fixed' %>
              <td id="table_quantity">
                <select id="table_quantity_value" style="width:50px">
                  <option value="01" selected>01</option>
                  <option value="02">02</option>
                  <option value="03">03</option>
                  <option value="04">04</option>
                  <option value="05">05</option>
                  <option value="06">06</option>
                  <option value="07">07</option>
                  <option value="08">08</option>
                  <option value="09">09</option>
                  <option value="10">10</option>
                </select>  
              </td>
            <% end %>            
            
            <% if @fee > 0 %>
              <td id="table_fee">$<%= number_with_precision(@fee, precision: 2) %></td>
            <% end %>
            <td id="table_total">$<%= number_with_precision(@total, precision: 2) %></td>
          </tr>
        </tbody>
      </table>      
      
    <div class="well" style="background-color: #ffffff">
           
        <form accept-charset="UTF-8" action="<%= checkout_confirmation_path(@campaign) %>" method="post" id="payment_form">
  
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
          
          <fieldset>
          <label for="card_number">Card Number</label>
          <input id="card_number" size="30" type="text">
          </fieldset>
        
          <fieldset>
          <label>Expiration</label>
            <select id="expiration_month" style="width:50px">
                <option value="01" selected>01</option>
                <option value="02">02</option>
                <option value="03">03</option>
                <option value="04">04</option>
                <option value="05">05</option>
                <option value="06">06</option>
                <option value="07">07</option>
                <option value="08">08</option>
                <option value="09">09</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
            </select>          
            <select id="expiration_year" style="width:75px">
                <option value="2013">2013</option>
                <option value="2014" selected>2014</option>
                <option value="2015">2015</option>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2019">2019</option>
                <option value="2020">2020</option>
                <option value="2021">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
            </select>
          </fieldset>
        
          <fieldset>
          <label for="security_code">Security Code</label>
          <input id="security_code" size="30" type="text" class="input-small">
          </fieldset>
                    
          <input id="ct_user_id" type="hidden"  name="ct_user_id" value="<%= current_user.ct_user_id %>" >
          
          <input id="amount" type="hidden" name="amount" data-original="<%= @amount %>" value="<%= @amount %>">
          <input id="fee" type="hidden" name="fee" data-original="<%= @fee %>" value="<%= @fee %>">
    
          <button class="btn btn-primary" type="submit">Confirm Payment</button>
          <span id="loader" class="loader" style="display:none"></span>     
        </form>
        <div id="errors"></div>
        <br/><br/>
        <p class="crowdhoster-powered" style="display:block!important"><i class="icon icon-lock"></i> Payments powered by Crowdhoster, a <img src="/assets/crowdtilt.png" width="60px"> product</p>
    </div>  
  <% else %>
    <div class="well" style="background-color: #ffffff">
      <h4 class="new_account_header">Please create an account to continue</h4>
      <div class="new_account">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      
        <div><%= f.label :fullname, "Full Name" %>
        <%= f.text_field :fullname, :autofocus => true %></div>
      
        <div><%= f.label :email %>
        <%= f.email_field :email %></div>
      
        <div><%= f.label :password %>
        <%= f.password_field :password %></div>
        <br/>
        <button class="btn btn-primary show_loader" data-loader="user_form" type="submit">Create Account</button>     
        <span class="loader" data-loader="user_form" style="display:none"></span>  
        <% end %>
      
        <%= link_to "Already have an account?", new_session_path(resource_name) %>
      </div>
    </div>  
  <% end %>
  
  </div>
  
    <%= render 'campaigns/checkout_sidebar' %>
  
  </div>
</div>
