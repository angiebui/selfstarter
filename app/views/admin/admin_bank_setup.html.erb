<div class="container clearfix">
  <ul class="nav nav-pills">
    <li>
      <%= link_to "Project", admin_project_path, class: 'show-loader' %>
    </li>
    <li>
      <%= link_to "Contributors", admin_contributors_path, class: 'show-loader' %>
    </li>
    <li class="active">
      <%= link_to "Bank Setup", admin_bank_setup_path, class: 'show-loader' %>
    </li>
  </ul>
</div>

<div id="admin_bank_setup" class="admin bank_setup">
  <div class="container clearfix">
    <div class="main_content">
      
      <% if current_user.has_default_bank %>
      
      <h4>Your bank is all set up!</h4>
      <p>Routing Number: ****<%= @bank.bank_code_last_four %></p>
      <p>Account Number: ****<%= @bank.account_number_last_four %></p>
      
      <% else %>
        
      <form accept-charset="UTF-8" action="/admin/bank-setup" method="post" id="bank_form">
        
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
        
        <h4>Account Owner Information</h4>
        <fieldset>
          
          <div class="form-row clearfix">
            <div class="field">
              <label for="full_legal_name">Full Legal Name</label>
              <input id="full_legal_name" type="text">
            </div>
            
            <div class="field">
              <label for="phone">Phone</label>
              <input id="phone" type="text">
            </div>
          </div>
          
          <div class="form-row clearfix">
            <div class="field">
              <label for="street_address">Street Address</label>
              <input id="street_address" type="text" style="width: 320px">
            </div>
            
            <div class="field">
              <label for="zip">Zip Code</label>
              <input id="zip" type="text" style="width: 100px">
            </div>
          </div>
          
          <div class="form-row clearfix">
            <div class="field">
            <label>Birth Month</label>
              <select id="birth_month" style="width: 110px">
                  <option value="01" selected>January</option>
                  <option value="02">February</option>
                  <option value="03">March</option>
                  <option value="04">April</option>
                  <option value="05">May</option>
                  <option value="06">June</option>
                  <option value="07">July</option>
                  <option value="08">August</option>
                  <option value="09">September</option>
                  <option value="10">October</option>
                  <option value="11">November</option>
                  <option value="12">December</option>
              </select>
            </div>
            
            <div class="field">
              <label for="birth_year">Birth Year (YYYY)</label>
              <input id="birth_year" type="text" style="width: 100px">
            </div>
          </div>       
          
        </fieldset>
        
        <h4>Bank Information</h4>
        <fieldset>
          <div class="form-row clearfix">
            <div class="field">
              <label for="routing_number">Bank Routing Number</label>
              <input id="bank_routing_number" type="text">
            </div>
            
            <div class="field">
              <label for="routing_number">Account Number</label>
              <input id="account_number" type="text">
            </div>
          </div>
        </fieldset>
        
        <input id="ct_user_id" type="hidden"  name="ct_user_id" value="<%= current_user.ct_user_id %>" >
  
        <button class="btn btn-primary" type="submit">Submit</button>
        <span id="loader" class="loader" style="display:none"></span>     
      </form>
      <div id="errors"></div>
      
      <% end %>
       
    </div>  
  </div>
</div>