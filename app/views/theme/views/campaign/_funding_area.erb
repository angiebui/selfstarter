<div id="funding_area">
  <div class="container clearfix">

    <% if user_signed_in? && current_user.admin? %>
      <div class="clearfix">
        <a href="<%= url_for edit_admin_campaign_path(@campaign) %>" class="pull-right"><i class="icon-pencil show_tooltip" data-placement="top" data-title="Edit Campaign"></i></a>
      </div>
    <% end %>
  
    <div class="media_content center clearfix">
    <% if @campaign.media_type == 'video' %>
    
      <div id="video">
        <% if @campaign.video_placeholder.file? %>
          <div id="video_image">
            <%= image_tag @campaign.video_placeholder.url(:medium), alt: "video_place_holder" %>
          </div>
          <% if !@campaign.video_embed_id.blank? %>
            <div id="player" class="hidden" style="display: none;">
              <object width="640" height="360">
                <param name="movie" value="https://www.youtube.com/v/<%= @campaign.video_embed_id %>?autohide=1&showinfo=0&rel=0&autoplay=1" />
                <param name="allowFullScreen" value="true" />
                <param name="allowscriptaccess" value="always" />
                <embed src="https://www.youtube.com/v/<%= @campaign.video_embed_id %>?autohide=1&showinfo=0&rel=0&autoplay=1" type="application/x-shockwave-flash" width="640" height="360" allowscriptaccess="always" allowfullscreen="true"></embed>
              </object>
            </div>
          <% end %>
        <% else %>
          <% if !@campaign.video_embed_id.blank? %>
            <iframe width='640' height='360' src="https://www.youtube.com/embed/<%= @campaign.video_embed_id %>?rel=0"></iframe>
          <% end %>
        <% end %>
      </div>
    
    <% else %>

      <div id="image">
        <%= image_tag @campaign.main_image.url(:medium), alt: "project_image" %>
      </div>
    
    <% end %>
    </div>
    
    <div class="top_content clearfix">
      <div class="campaign_title">
        <h2><%= @campaign.name %></h2>
        <div><%= raw(@campaign.primary_call_to_action_description) %></div>
        <div class="share">
          <%= render 'shared/share_buttons' %>
        </div>

      </div>
      <div class="stats">
        <p class="amount center">
          <%= number_to_currency @campaign.stats_raised_amount.ceil, :precision => 0 %>
          <span class="goal">of <%= number_to_currency @campaign.goal.ceil, :precision => 0 %></span>
        </p>
        
        <div class='progress_bg'>
          <div class='progress' style='width: <%= @campaign.stats_tilt_percent.to_i %>%;'></div>
        </div> 
        
        <div class="sub_stats clearfix">
          <div class="backers center">
            <img src="/assets/person.png" width="45px">
            <p>
            <%= number_with_delimiter @campaign.stats_number_of_contributions.to_i, :delimiter => "," %>
            <%= @campaign.contributor_reference.pluralize(@campaign.stats_number_of_contributions.to_i) %>
            </p>
          </div>
          <div class="time center">
            <img src="/assets/clock.png" width="45px">
            <p>
            <% if !@campaign.expired? %>
                <%= distance_of_time_in_words_to_now(@campaign.expiration_date).gsub(/\D/, "") %> 
                <%= distance_of_time_in_words_to_now(@campaign.expiration_date).gsub(/\d/, "").gsub("about", "") %> left
            <% else %>
                  No days left!
            <% end %>
            </p>
          </div>
        </div>
        
        <div id="reserve_container">
          <div class="call_to_action_button">
            <% if @campaign.expired? %>
              <span class="button expired">
                <%= @campaign.primary_call_to_action_button %>
              </span>           
            <% else %>
              <a href="<%= url_for checkout_amount_path %>" class="button">
                <%= @campaign.primary_call_to_action_button %>
              </a>
            <% end %>
          </div>
        </div>        
        
      </div>
    </div>
  
  </div>
</div>