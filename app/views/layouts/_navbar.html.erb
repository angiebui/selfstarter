<div id="navbar">
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container clearfix">
        <ul class="nav pull-left">
          <li><a href="http://www.crowdhoster.com" target="_blank">Powered by Crowdhoster</a></li>
          
          <% if Rails.configuration.crowdtilt_mode == 'sandbox' %>
          <li style="background: red; color: white; margin-top: 5px; border-radius: 5px" class="show_tooltip" data-placement="bottom" data-title="Transactions will NOT be processed">&nbsp;Sandbox Mode&nbsp;</li>
          <% end %>
        
        </ul>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <img src="/assets/user_icon.png"/>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> 
                <%= current_user.fullname %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu pull-right" role="menu">
                <li><%= link_to "Account", user_payments_path %></li>
                
                <% if current_user.admin? %>
                
                <li><%= link_to "Admin", admin_website_path %></li>
                
                <% end %>
                                
                <li class="divider"></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: "delete" %></li>
              </ul>
          <% else %>
            <li><img src="/assets/user_icon.png"/><%= link_to "Sign In", new_user_session_path %>
          <% end %>               
          </li>
        </ul>     
      </div>
    </div>
  </div>
</div>