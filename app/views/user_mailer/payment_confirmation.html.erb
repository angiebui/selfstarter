	<%= @payment.city %>, <%= @payment.state %> <%= @payment.postal_code %><br/>
	<%= @payment.country %>
	<br/>
<% end %>
<% if @campaign.collect_additional_info %>
	Additional Information:<br/> 
	<%= @payment.additional_info %>
	<br/>
<% end %>
